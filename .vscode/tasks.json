{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "D:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:/msys64/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Configure SandBox",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-G",
                "Ninja",
                "-DBUILD_NFRAME=ON",
                "-DBUILD_SANDBOX=ON",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DNF_BUILD_DLL=ON"
                
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Configure project to build SandBox with NFrame"
        },
        {
            "label": "Build SandBox",
            "dependsOn": [
                "Configure SandBox"
            ],
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Configure project to build SandBox with NFrame"
        },
        {
            "label": "Run SandBox",
            "dependsOn": [
                "Build SandBox"
            ],
            "type": "shell",
            "command": "${workspaceFolder}/build/SandBox/SandBoxApp.exe",
            "windows": {
                "command": "start",
                "args": [
                    "",
                    "${workspaceFolder}\\build\\SandBox\\SandBoxApp.exe"
                ]
            },
            "problemMatcher": [],
            "group": "none"
        }
    ],
    "version": "2.0.0"
}